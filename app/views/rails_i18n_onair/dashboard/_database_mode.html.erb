<div class="row mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h3 class="display-4 text-primary"><%= statistics[:total_translations] %></h3>
        <p class="card-text text-muted">Total Translations</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h3 class="display-4 text-success"><%= statistics[:languages].count %></h3>
        <p class="card-text text-muted">Languages</p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h3 class="display-4 text-info">
          <i class="bi bi-database-fill"></i>
        </h3>
        <p class="card-text text-muted">Database Mode Active</p>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-globe"></i> Available Languages</h5>
      </div>
      <div class="card-body">
        <% if statistics[:languages].any? %>
          <ul class="list-group list-group-flush">
            <% statistics[:languages].each do |lang| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><i class="bi bi-translate me-2"></i><%= lang.upcase %></span>
                <%= link_to "View", translations_path(lang), class: "btn btn-sm btn-outline-primary" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mb-0">
            <i class="bi bi-info-circle"></i> No languages found. Import locale files to get started.
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Updates</h5>
      </div>
      <div class="card-body">
        <% if statistics[:recent_updates].any? %>
          <ul class="list-group list-group-flush">
            <% statistics[:recent_updates].each do |translation| %>
              <li class="list-group-item">
                <strong><%= translation.language.upcase %></strong>
                <br>
                <small class="text-muted">
                  Updated <%= time_ago_in_words(translation.updated_at) %> ago
                </small>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mb-0">
            <i class="bi bi-info-circle"></i> No recent updates
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2 d-md-flex">
          <%= link_to translations_path, class: "btn btn-primary" do %>
            <i class="bi bi-list-ul me-2"></i> View All Translations
          <% end %>
          <%= link_to new_translation_path, class: "btn btn-success" do %>
            <i class="bi bi-plus-circle me-2"></i> Add New Translation
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
