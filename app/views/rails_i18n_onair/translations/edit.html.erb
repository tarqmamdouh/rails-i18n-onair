<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-pencil"></i> Edit Translation: <%= @translation.language.upcase %></h1>
  <%= link_to translation_path(@translation), class: "btn btn-outline-secondary" do %>
    <i class="bi bi-x-circle"></i> Cancel
  <% end %>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-code-square"></i> Edit Translation Data</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @translation, url: translation_path(@translation), method: :patch, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :translation_data, "Translation Data (JSON or YAML format)", class: "form-label" %>
            <%= text_area_tag "translation[translation_data]", @translation_json, class: "form-control", rows: 20, style: "font-family: monospace; font-size: 14px;" %>
            <div class="form-text">
              <i class="bi bi-info-circle"></i>
              Edit the translation data in JSON or YAML format. The structure will be validated before saving.
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= f.submit "Save Changes", class: "btn btn-primary btn-lg" %>
            <%= link_to "Cancel", translation_path(@translation), class: "btn btn-outline-secondary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card shadow-sm border-info">
      <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Tips</h6>
      </div>
      <div class="card-body">
        <p class="card-text small">
          <strong>JSON Format:</strong>
        </p>
        <pre class="small"><code>{
  "hello": "Hello",
  "user": {
    "name": "Name"
  }
}</code></pre>

        <hr>

        <p class="card-text small">
          <strong>YAML Format:</strong>
        </p>
        <pre class="small"><code>hello: Hello
user:
  name: Name</code></pre>

        <hr>

        <p class="card-text small mb-0">
          <i class="bi bi-check-circle text-success"></i> Syntax validation happens automatically
        </p>
      </div>
    </div>

    <div class="card shadow-sm border-warning mt-3">
      <div class="card-header bg-warning">
        <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Warning</h6>
      </div>
      <div class="card-body">
        <p class="card-text small mb-0">
          Be careful when editing translations. Invalid syntax or removing keys could break your application.
        </p>
      </div>
    </div>
  </div>
</div>
