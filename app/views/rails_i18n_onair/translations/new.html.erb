<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-plus-circle"></i> Add New Translation</h1>
  <%= link_to translations_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-x-circle"></i> Cancel
  <% end %>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-file-earmark-plus"></i> New Translation</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @translation, url: translations_path, method: :post, local: true do |f| %>
          <div class="mb-4">
            <%= f.label :language, "Language Code", class: "form-label" %>
            <%= f.text_field :language, class: "form-control", placeholder: "e.g., en, fr, es, pt-BR", required: true %>
            <div class="form-text">
              <i class="bi bi-info-circle"></i>
              Use ISO 639-1 language codes (e.g., en, fr, es) or with region codes (e.g., pt-BR, en-US)
            </div>
          </div>

          <div class="mb-4">
            <%= label_tag "translation[translation_data]", "Translation Data (JSON or YAML format)", class: "form-label" %>
            <%= text_area_tag "translation[translation_data]", nil, class: "form-control", rows: 15, style: "font-family: monospace; font-size: 14px;", placeholder: "Enter translation data in JSON or YAML format..." %>
            <div class="form-text">
              <i class="bi bi-info-circle"></i>
              Provide the translation data in JSON or YAML format. See examples in the sidebar.
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= f.submit "Create Translation", class: "btn btn-success btn-lg" %>
            <%= link_to "Cancel", translations_path, class: "btn btn-outline-secondary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card shadow-sm border-info">
      <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="bi bi-book"></i> Examples</h6>
      </div>
      <div class="card-body">
        <p class="card-text small">
          <strong>JSON Format:</strong>
        </p>
        <pre class="small"><code>{
  "hello": "Hello",
  "welcome": "Welcome",
  "user": {
    "name": "Name",
    "email": "Email"
  },
  "messages": {
    "success": "Success!"
  }
}</code></pre>

        <hr>

        <p class="card-text small">
          <strong>YAML Format:</strong>
        </p>
        <pre class="small"><code>hello: Hello
welcome: Welcome
user:
  name: Name
  email: Email
messages:
  success: Success!</code></pre>
      </div>
    </div>

    <div class="card shadow-sm border-success mt-3">
      <div class="card-header bg-success text-white">
        <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Tip</h6>
      </div>
      <div class="card-body">
        <p class="card-text small mb-0">
          You can also import translations from YAML files using the rake task:
          <code class="d-block mt-2">rails rails_i18n_onair:import:language[en]</code>
        </p>
      </div>
    </div>
  </div>
</div>
