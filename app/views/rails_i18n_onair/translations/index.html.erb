<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-database"></i> Translations</h1>
  <%= link_to new_translation_path, class: "btn btn-success" do %>
    <i class="bi bi-plus-circle me-2"></i> Add New Translation
  <% end %>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: translations_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-10">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search by language code (e.g., en, fr, es)..." %>
      </div>
      <div class="col-md-2">
        <%= submit_tag "Search", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0"><i class="bi bi-list-ul"></i> All Translations (<%= @translations.count %>)</h5>
  </div>
  <div class="card-body p-0">
    <% if @translations.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th><i class="bi bi-globe"></i> Language</th>
              <th><i class="bi bi-key"></i> Keys Count</th>
              <th><i class="bi bi-clock"></i> Last Updated</th>
              <th><i class="bi bi-tools"></i> Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @translations.each do |translation| %>
              <tr>
                <td>
                  <span class="badge bg-primary"><%= translation.language.upcase %></span>
                </td>
                <td><%= translation.translation.keys.count %> keys</td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(translation.updated_at) %> ago
                  </small>
                </td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to translation_path(translation), class: "btn btn-outline-info" do %>
                      <i class="bi bi-eye"></i> View
                    <% end %>
                    <%= link_to edit_translation_path(translation), class: "btn btn-outline-primary" do %>
                      <i class="bi bi-pencil"></i> Edit
                    <% end %>
                    <%= button_to translation_path(translation), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete the #{translation.language.upcase} translation?" } do %>
                      <i class="bi bi-trash"></i> Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <p class="text-muted mt-3">
          <% if params[:search].present? %>
            No translations found matching "<%= params[:search] %>"
          <% else %>
            No translations yet. Add your first translation to get started!
          <% end %>
        </p>
        <% unless params[:search].present? %>
          <%= link_to new_translation_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle me-2"></i> Add First Translation
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
