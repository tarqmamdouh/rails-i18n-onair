<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-file-earmark-code"></i> <%= @file_info[:filename] %></h1>
  <div>
    <%= link_to edit_locale_file_path(filename: @file_info[:filename]), class: "btn btn-primary me-2" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to locale_files_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <h6 class="text-muted">Language</h6>
        <h4><span class="badge bg-primary"><%= @file_info[:language].upcase %></span></h4>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <h6 class="text-muted">File Size</h6>
        <p class="mb-0"><%= number_to_human_size(@file_info[:size]) %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h6 class="text-muted">Last Modified</h6>
        <p class="mb-0"><%= @file_info[:modified_at].strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0"><i class="bi bi-code-square"></i> YAML Content</h5>
  </div>
  <div class="card-body" style="background-color: #f8f9fa;">
    <pre style="background-color: #282c34; color: #abb2bf; padding: 20px; border-radius: 5px; overflow-x: auto;"><code><%= @content %></code></pre>
  </div>
</div>

<% if @parsed_yaml.present? %>
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white">
      <h5 class="mb-0"><i class="bi bi-list-nested"></i> Parsed Structure</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Key</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <%= render_yaml_tree(@parsed_yaml) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
