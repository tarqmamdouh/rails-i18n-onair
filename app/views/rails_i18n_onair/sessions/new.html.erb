<div class="auth-card">
  <div class="auth-header">
    <h1><i class="bi bi-translate"></i> Rails I18n OnAir</h1>
    <p>Translation Management Dashboard</p>
  </div>

  <%= form_with url: login_path, method: :post, local: true, html: { class: "needs-validation" } do |f| %>
    <div class="mb-3">
      <%= label_tag :username, "Username", class: "form-label" %>
      <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Enter your username", required: true, autofocus: true %>
    </div>

    <div class="mb-4">
      <%= label_tag :password, "Password", class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>

    <div class="d-grid">
      <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <hr class="my-4">

  <div class="text-center">
    <small class="text-muted">
      <i class="bi bi-shield-lock"></i>
      Secure authentication with bcrypt
    </small>
  </div>
</div>
